<h1>Eat-Da-Burger!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
    <li>
      <p>{{this.burger_name}} <button class="devour" data-id="{{this.id}}" data-devoured="{{this.devoured}}">Devour</button></p>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
    <li>
      <p>{{this.burger_name}}</p>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="form" >

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burgerName" name="burgerName">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="newburger" value="1" checked> Devoured!<br>
    <input type="radio" name="newburger" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
